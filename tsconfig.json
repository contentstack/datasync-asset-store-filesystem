{
  "compilerOptions": {
    "module": "commonjs",
    "declarationDir": "typings",
    "declaration": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "./src",
    "lib": ["es6"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}